# http://editorconfig.org
root = true

[*]
; 文件编码
charset = utf-8

; 缩进类型
indent_style = space

; Tab 宽度
indent_size = 2

; 换行符的类型
end_of_line = lf

; 空白行结尾
insert_final_newline = true

; 自动删除行尾空格
trim_trailing_whitespace = true


[*.md]
trim_trailing_whitespace = false

[COMMIT_EDITMSG]
max_line_length = 0